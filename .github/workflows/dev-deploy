name: Deploy Frontend Dev

on:
  push:
    branches:
      - dev-deploy

jobs:
  deploy-frontend-dev:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout source
        uses: actions/checkout@v3

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: Install deps and build
        run: |
          npm ci
          echo "NEXT_PUBLIC_API_URL=https://singsonggame.store/api-dev" > .env
          npm run build

      - name: Configure AWS credentials
        uses: aws-actions/configure-aws-credentials@v2
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: ${{ secrets.AWS_REGION }}

      - name: Login to Amazon ECR
        run: |
          aws ecr get-login-password --region ${{ secrets.AWS_REGION }} \
          | docker login --username AWS --password-stdin ${{ secrets.ECR_REGISTRY }}

      - name: Build & Push Docker image (with :dev tag)
        run: |
          docker build -t ${{ secrets.ECR_REGISTRY }}/singsonggame-fe:dev .
          docker push  ${{ secrets.ECR_REGISTRY }}/singsonggame-fe:dev

      - name: Deploy to Dev EC2
        uses: appleboy/ssh-action@v1.0.0
        with:
          host: ${{ secrets.DEV_FE_INSTANCE_HOST }}
          username: ubuntu
          key: ${{ secrets.INSTANCE_SSH_KEY }}
          script: |
            docker stop frontend-dev || true && docker rm frontend-dev || true
            docker pull ${{ secrets.ECR_REGISTRY }}/singsonggame-fe:dev
            docker run -d --name frontend-dev -p 3001:3000 \
              ${{ secrets.ECR_REGISTRY }}/singsonggame-fe:dev
